# Usuario y contraseña para la base de datos Postgres
POSTGRES_USER=superadmin             # Usuario para la base de datos Postgres
POSTGRES_PASSWORD=tu_contraseña_segura  # Contraseña para Postgres (cambia esto)
POSTGRES_DB=casebender               # Nombre de la base de datos usada

# Usuario y contraseñas para MySQL (usada por MISP)
MYSQL_USER=mispuser                  # Usuario MySQL para MISP
MYSQL_PASSWORD=otra_contraseña_segura  # Contraseña MySQL para MISP
MYSQL_ROOT_PASSWORD=root_password_segura  # Contraseña root de MySQL

# Datos de administrador para MISP
MISP_ADMIN_EMAIL=admin@misp.local    # Email del admin de MISP
MISP_ADMIN_PASSPHRASE=tu_passphrase_segura  # Contraseña del admin MISP

# Usuario y contraseña para MinIO (almacenamiento de objetos)
MINIO_ROOT_USER=minioadmin           # Usuario para MinIO
MINIO_ROOT_PASSWORD=minioadminpassword  # Contraseña para MinIO

# Variables para autenticación de Casebender
AUTH_SECRET=clave_muy_secreta        # Clave secreta para auth (mantener en secreto)
AUTH_SALT=salt_valor                 # Salt para hash (mantener en secreto)

# URLs de la aplicación
NEXTAUTH_URL=https://local.casebender.com  # URL pública para autenticación
NEXTAPP_URL=https://local.casebender.com   # URL pública para la app frontend

# Liveblocks (servicio de colaboración en tiempo real)
LIVEBLOCKS_SECRET_KEY=clave_liveblocks    # Clave secreta para Liveblocks

# URLs de conexión a la base de datos (Postgres) usadas por Prisma y otras apps
POSTGRES_PRISMA_URL=postgresql://superadmin:tu_contraseña_segura@db:5432/casebender?pgbouncer=true&connect_timeout=15
POSTGRES_URL=postgresql://superadmin:tu_contraseña_segura@db:5432/casebender?pgbouncer=true&connect_timeout=15
POSTGRES_URL_NON_POOLING=postgresql://superadmin:tu_contraseña_segura@db:5432/casebender

# URL para Redis (cache y cola de mensajes)
REDIS_URL=redis://redis:6379
